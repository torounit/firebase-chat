{
  "rules": {
    ".read": false,
    ".write": false,
    "messages": {
      ".read": "auth != null",
      "$message_id": {
        ".write": "(!data.exists() && newData.exists()) || (data.child('authorUid').val() == auth.uid)"
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
