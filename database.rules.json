{
  "rules": {
    ".read": false,
    ".write": false,
    "threads": {
      "$thread_id" : {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "messages": {
      "$thread_id" : {
        ".read": "auth != null",
        "$message_id": {
          ".write": "(!data.exists() && newData.exists()) || (data.child('authorUid').val() == auth.uid)"
        }
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
